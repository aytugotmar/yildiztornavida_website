@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/Uploads/ID/cropped-parasut.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-image: url('/Uploads/ID/login.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px;
        }

        .form-container {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 40px;
            width: 100%;
            max-width: 500px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .form-container h2 {
            color: #f8f9fa;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            color: #adb5bd;
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            padding: 12px 15px;
            border-radius: 5px;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #66afe9;
            box-shadow: 0 0 0 0.2rem rgba(102, 175, 233, 0.25);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .form-text {
            color: #6c757d;
        }

        .link-text {
            color: #adb5bd;
            text-align: center;
            display: block;
            margin-top: 20px;
        }

        .link-text a {
            color: #007bff;
            text-decoration: none;
        }

        .link-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="form-container">
        <h2 class="text-center mb-4">Giriş Yap</h2>
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            @Html.Hidden("returnUrl", Request.QueryString["returnUrl"])
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresi</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="E-mail" required>
            </div>
            <div class="mb-3 password-toggle">
                <label for="password" class="form-label">Parola</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifre" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Giriş Yap</button>
            <a href="/Admin/ForgetPassword" class="btn btn-danger w-100 mb-3">Şifremi Unuttum</a>
            <p class="link-text">
                Hesabınız yok mu? <a href="/Admin/Signup">Kayıt Ol</a>
            </p>
        }
    </div>

</body>

</html>
