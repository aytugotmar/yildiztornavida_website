@using System.Text.RegularExpressions
@model IEnumerable<WebApplication.Models.Model.Blog>

<div id="main-slider" class="flexslider" style="position:relative;overflow:hidden;">
    <ul class="slides" style="list-style:none;padding:0;margin:0;">
        @foreach (var item in Model.Where(x => x.isHome))
        {
            <li style="position:relative;">
                <!-- Resim -->
                <div style="width:100%;overflow:hidden;">
                    <img src="@item.CoverURL"
                         alt="@Html.Raw(Regex.Replace(item.Title ?? "", "<.*?>", String.Empty))"
                         style="width:100%;height:auto;max-height:400px;object-fit:cover;object-position:center;display:block;" />
                </div>

                <!-- Yazı kutusu -->
                <div style="position:absolute;bottom:0;left:0;width:100%;background:rgba(0,0,0,0.7);color:#fff;padding:15px 20px;box-sizing:border-box;border-top-left-radius:10px;border-top-right-radius:10px;">
                    <h3 style="margin:0;font-size:24px; color:#00629b;">
                        @Html.Raw(Regex.Replace(item.Title ?? "", "<.*?>", String.Empty))
                    </h3>
                    <p style="margin:5px 0 0;font-size:16px;" class="slider-text">
                        @{
                            var plainText = Regex.Replace(item.Text ?? "", "<.*?>", String.Empty);
                        }
                        @(plainText.Length > 150 ? plainText.Substring(0, 150) + "..." : plainText)
                    </p>
                    <a href="@Url.Action("BlogDetail", "Home", new { id = item.BlogId })"
                       style="margin-top:10px;display:inline-block;padding:8px 15px;background:#ffa300;color:#fff;border:none;border-radius:5px;text-decoration:none;font-weight:bold;">
                        Devamını Oku
                    </a>
                </div>
            </li>
        }
    </ul>
</div>