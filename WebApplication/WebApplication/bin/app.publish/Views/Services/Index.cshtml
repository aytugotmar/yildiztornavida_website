@model IEnumerable<WebApplication.Models.Model.Services>
@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Hizmetlerimiz Yönetim Paneli</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Index">Ana Sayfa</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Services</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<br />
<a class="btn btn-default" href="/Services/Create">Yeni Hizmet Ekle</a>
<br /><br />

<div class="table-responsive">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.ServiceId)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ImageURL)</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ServiceId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td><img src="@item.ImageURL" width="100" height="100" alt="Service Image" /></td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.ServiceId })
                        <br />
                        @Html.ActionLink("Sil", "Delete", new { id = item.ServiceId })
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>