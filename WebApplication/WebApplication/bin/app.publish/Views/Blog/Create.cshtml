@model WebApplication.Models.Model.Blog
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()
<div class="form-horizontal m-t-30">
    <div class="form-group">
        <label>Başlık <span class="required">*</span> </label>
        <textarea id="editor1" name="Title" class="form-control" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label>İçerik <span class="required">*</span> </label>
        <textarea id="editor2" name="Text" class="form-control" rows="10" required></textarea>
    </div>

    <div class="form-group">
        <label>Kategori Seç <span class="required">*</span> </label>
        <div class="col-lg-10">
            @Html.DropDownList("CategoryId", null, new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Yazar Seç <span class="required">*</span> </label>
        <div class="col-lg-10">
            @Html.DropDownList("AuthorId", null, new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <!-- IsHome Alanı: Yeni Eklenen Radio Buttonlar -->
    <div class="form-group">
        <label class="control-label col-md-5">Ana Sayfada Görünsün Mü? <span class="required">*</span> </label>
        <div class="col-md-10">
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(model => model.isHome, true) Evet
                </label>
            </div>
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(model => model.isHome, false) Hayır
                </label>
            </div>
            @Html.ValidationMessageFor(model => model.isHome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex flex-column flex-md-row align-items-center gap-2 mb-3">
        <!-- Buton -->
        <button type="button" class="btn btn-primary" id="uploadBtn">Yükle <span class="required">*</span> </button>

        <!-- Seçilen dosya adı -->
        <span id="fileName" class="text-truncate" style="margin-left: 5px; max-width: 300px;">Dosya seçilmedi</span>

        <!-- Gizli file input -->
        <input required type="file" id="fileInput" name="CoverURL" accept=".png,.jpeg,.jpg,.webp" style="display:none;">
    </div>

    <script>
        const uploadBtn = document.getElementById('uploadBtn');
        const fileInput = document.getElementById('fileInput');
        const fileNameSpan = document.getElementById('fileName');

        // Butona tıklayınca gizli input tetiklensin
        uploadBtn.addEventListener('click', () => fileInput.click());

        // Dosya seçilince adı göster
        fileInput.addEventListener('change', (e) => {
            const fileName = e.target.files.length > 0 ? e.target.files[0].name : "Dosya seçilmedi";
            fileNameSpan.textContent = fileName;
        });
    </script>


    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="/Blog" class="btn btn-primary text-light text-decoration-none">Geri Dön</a>
        </div>
    </div>
</div>
}