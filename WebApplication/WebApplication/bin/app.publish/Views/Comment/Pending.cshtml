@model IPagedList<WebApplication.Models.Model.Comment>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Onay Bekleyen Yorumlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Onay Bekleyen Yorumlar</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index", "Comment")" class="btn btn-primary">
                            <i class="fas fa-list"></i> Tüm Yorumlar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info">
                            @TempData["Message"]
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="mb-3">
                            @using (Html.BeginForm("BulkApprove", "Comment", FormMethod.Post, new { id = "bulkForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check"></i> Seçilenleri Onayla
                                </button>
                            }
                            @using (Html.BeginForm("BulkReject", "Comment", FormMethod.Post, new { id = "bulkRejectForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Seçilen yorumları reddetmek istediğinizden emin misiniz?')">
                                    <i class="fas fa-times"></i> Seçilenleri Reddet
                                </button>
                            }
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            <input type="checkbox" id="selectAll" />
                                        </th>
                                        <th>ID</th>
                                        <th>Yazar</th>
                                        <th>Blog</th>
                                        <th>Yorum</th>
                                        <th>Tarih</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="commentIds" value="@comment.CommentId"
                                                       class="comment-checkbox" form="bulkForm" />
                                                <input type="checkbox" name="commentIds" value="@comment.CommentId"
                                                       class="comment-checkbox d-none" form="bulkRejectForm" />
                                            </td>
                                            <td>@comment.CommentId</td>
                                            <td>
                                                <strong>@comment.Admin.Name @comment.Admin.Surname</strong><br>
                                                <small class="text-muted">@comment.Admin.Email</small>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("BlogDetail", "Home", new { id = comment.BlogId })"
                                                   target="_blank">
                                                    @Html.Raw(comment.Blog?.Title ?? "Blog bulunamadı")
                                                </a>
                                            </td>
                                            <td>
                                                <div style="max-width: 400px;">
                                                    @comment.CommentText
                                                </div>
                                            </td>
                                            <td>@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @using (Html.BeginForm("Approve", "Comment", FormMethod.Post, new { autocomplete = "off" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@comment.CommentId" />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i> Onayla
                                                    </button>
                                                }
                                                @using (Html.BeginForm("Reject", "Comment", FormMethod.Post, new { autocomplete = "off" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@comment.CommentId" />
                                                    <button type="submit" class="btn btn-warning btn-sm"
                                                            onclick="return confirm('Bu yorumu reddetmek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-times"></i> Reddet
                                                    </button>
                                                }
                                                @using (Html.BeginForm("Delete", "Comment", FormMethod.Post, new { autocomplete = "off" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@comment.CommentId" />
                                                    <button type="submit" class="btn btn-danger btn-sm"
                                                            onclick="return confirm('Bu yorumu silmek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (Model.PageCount > 1)
                        {
                            <div class="d-flex justify-content-center mt-3">
                                @Html.PagedListPager(Model, page => Url.Action("Pending", new { page }),
                                    new PagedListRenderOptions
                                    {
                                        LinkToPreviousPageFormat = "« Önceki",
                                        LinkToNextPageFormat = "Sonraki »",
                                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                        LiElementClasses = new string[] { "page-item" }
                                    })
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Onay bekleyen yorum bulunmamaktadır.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Select all checkbox functionality
            $('#selectAll').change(function () {
                $('.comment-checkbox').prop('checked', $(this).prop('checked'));
            });
        });
    </script>
}
