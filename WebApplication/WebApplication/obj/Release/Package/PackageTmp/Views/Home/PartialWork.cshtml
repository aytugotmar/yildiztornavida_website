@using System.Text.RegularExpressions
@model IEnumerable<WebApplication.Models.Model.Services>

<section id="projects">
    <ul style="display:flex; justify-content:center; align-items:center;" id="thumbs" class="portfolio">
        @foreach (var item in Model)
        {
            <li class="col-lg-3 design" data-id="id-0" data-type="web">
                <div class="item-thumbs">
                    <a class="hover-wrap fancybox" data-fancybox-group="gallery"
                       title="@Html.Raw(Regex.Replace(item.Title ?? "", "<.*?>", String.Empty))"
                       href="@item.ImageURL">
                        <span class="overlay-img"></span>
                        <span class="overlay-img-thumb font-icon-plus"></span>
                    </a>
                    <img src="@item.ImageURL"
                         alt="@Html.Raw(Regex.Replace(item.Description ?? "", "<.*?>", String.Empty))">
                </div>
            </li>
        }
    </ul>
</section>