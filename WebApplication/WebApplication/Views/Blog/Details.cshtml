@model WebApplication.Models.Model.Blog

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Yazar Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Name)
        </dd>

        <dt>
            Kategori Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            Başlık
        </dt>

        <dd>
            @Html.Raw(Model.Title)
        </dd>

        <dt>
            İçerik
        </dt>

        <dd>
            @Html.Raw(Model.Text)
        </dd>

        <dt>
            Kapak Resmi
        </dt>

        <dd>
            <img src="@Model.CoverURL" alt="Kapak Resmi" style="width:auto; height:25vh;" />
        </dd>

        <dt>
            Oluşturulma Tarihi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            Güncellenme Tarihi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

        <dt>
            Ana Sayfada Gösterilsin mi?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isHome)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.BlogId }) |
    @Html.ActionLink("Geri Dön", "Index")
</p>
