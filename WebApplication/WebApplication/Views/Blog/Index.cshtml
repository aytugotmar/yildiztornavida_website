@model IEnumerable<WebApplication.Models.Model.Blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Blog Yönetim Paneli</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Index">Ana Sayfa</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Blog</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<br />
<a class="btn btn-default" href="/Blog/Create">Yeni Blog Ekle</a>
<br />
<br />

<div class="table-responsive">
    <table id="myTable" class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.BlogId)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.CategoryId)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.isHome)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.AuthorId)</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BlogId)</td>
                    <td>@Html.Raw(item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.isHome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Author.Name)</td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.BlogId })
                        <br />
                        @Html.ActionLink("Sil", "Delete", new { id = item.BlogId })
                        <br />
                        @Html.ActionLink("Detay", "Details", new { id = item.BlogId })
                    </td>
                </tr>
            }
            </tbody>
    </table>
</div>