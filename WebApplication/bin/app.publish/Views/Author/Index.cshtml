@model IEnumerable<WebApplication.Models.Model.Author>

@{
    ViewBag.Title = "Yazarlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">Yazarlar Yönetim Paneli</h4>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Index">Ana Sayfa</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Author</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<br />
<a class="btn btn-default" href="/Author/Create">Yeni Yazar Ekle</a>
<br />
<br />

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>

   
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" alt="Yazar Resmi" style="width:auto; height:10vh" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bio)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.AuthorId }) <br />
                    @Html.ActionLink("Detaylar", "Details", new { id = item.AuthorId }) <br />
                    @Html.ActionLink("Sil", "Delete", new { id = item.AuthorId })
                </td>
            </tr>
        }
        </tbody>   
</table>
