@model IEnumerable<WebApplication.Models.Model.Comment>

@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tüm Yorumlar</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Pending", "Comment")" class="btn btn-warning">
                            <i class="fas fa-clock"></i> Onay Bekleyenler (@ViewBag.PendingCount)
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info">
                            @TempData["Message"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Yazar</th>
                                    <th>Blog</th>
                                    <th>Yorum</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var comment in Model)
                                {
                                    <tr>
                                        <td>@comment.CommentId</td>
                                        <td>
                                            <strong>@comment.Admin.Name @comment.Admin.Surname</strong><br>
                                            <small class="text-muted">@comment.Admin.Email</small>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("BlogDetail", "Home", new { id = comment.BlogId })"
                                               target="_blank">
                                                @Html.Raw(comment.Blog?.Title ?? "Blog bulunamadı")
                                            </a>
                                        </td>
                                        <td>
                                            <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                                @comment.CommentText
                                            </div>
                                        </td>
                                        <td>@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (comment.isApproved)
                                            {
                                                <span class="badge badge-success">Onaylandı</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">Onay Bekliyor</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!comment.isApproved)
                                            {
                                                using (Html.BeginForm("Approve", "Comment", FormMethod.Post, new { autocomplete = "off", @class = "d-inline" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@comment.CommentId" />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i> Onayla
                                                    </button>
                                                }
                                            }
                                            @using (Html.BeginForm("Delete", "Comment", FormMethod.Post, new { autocomplete = "off", @class = "d-inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@comment.CommentId" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Bu yorumu silmek istediğinizden emin misiniz?')">
                                                    <i class="fas fa-trash"></i> Sil
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}