<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">BİZE ULAŞIN</h5>
                <address>
                    <strong>IEEE YTU</strong><br>
                    @ViewBag.Contact.Adress
                </address>
                <p>
                    @*<i class="fas fa-phone"></i> @ViewBag.Contact.Tel <br>*@
                    <i class="fas fa-envelope"></i> <a style="color:white;" href="mailto:@ViewBag.Contact.Email">@ViewBag.Contact.Email</a>
                </p>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">MENÜ</h5>
                <ul class="link-list">
                    <li><a href="/">Ana Sayfa</a></li>
                    <li><a href="/Home/About">Hakkımızda</a></li>
                    <li><a href="/Home/Blog">Blog</a></li>
                    <li><a href="/Home/About">İletişim</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">Son Yazılar</h5>
                <ul class="link-list">
                    @foreach (var item in ((IEnumerable<dynamic>)ViewBag.Blog).Take(7))
                    {
                        <li>
                            <a href="/Home/BlogDetail/@item.BlogId">
                                @Html.Raw(item.Title)
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget">
                <ul class="link-list">
                    <li>
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img style="max-height:150px;" onmouseover="this.style.opacity='0.6'" onmouseout="this.style.opacity='1'" src="@Url.Content(ViewBag.SiteLogo.LogoURL)"></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div style="background-color: black;" id="sub-footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="copyright">
                    <p>&copy; @DateTime.Now.Year IEEE YTU. All right reserved.</p>
                    <div class="credits">
                        Designed by <a style="color: #ffa300;" target="_blank" href="https://www.linkedin.com/in/aytugotmar/">Aytuğ Otmar</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <ul class="social-network">
                    <li><a href="@ViewBag.Contact.Facebook" data-placement="top" title="Facebook"><i class="fa-brands fa-facebook"></i></a></li>
                    <li><a href="@ViewBag.Contact.X" data-placement="top" title="Twitter"><i class="fa-brands fa-twitter"></i></a></li>
                    <li><a href="@ViewBag.Contact.Linkedin" data-placement="top" title="Linkedin"><i class="fa-brands fa-linkedin"></i></a></li>
                    <li><a href="@ViewBag.Contact.Youtube" data-placement="top" title="Youtube"><i class="fa-brands fa-youtube"></i></a></li>
                    <li><a href="@ViewBag.Contact.Instagram" data-placement="top" title="Instagram"><i class="fa-brands fa-instagram"></i></a></li>
                    <li><a href="@ViewBag.Contact.Tiktok" data-placement="top" title="TikTok"><i class="fa-brands fa-tiktok"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
